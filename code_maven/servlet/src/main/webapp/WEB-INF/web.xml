<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">
  <servlet>
    <servlet-name>hello</servlet-name>
    <servlet-class>com.feng.servlet.HelloServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>hello</servlet-name>
    <!--    相对路径-->
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>getServletContext</servlet-name>
    <servlet-class>com.feng.servlet.GetServletContext</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getServletContext</servlet-name>
    <url-pattern>/getContext</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>dispatchContext</servlet-name>
    <servlet-class>com.feng.servlet.DispatchServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>dispatchContext</servlet-name>
    <url-pattern>/dispatchContext</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>getProperties</servlet-name>
    <servlet-class>com.feng.servlet.GetProperties</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getProperties</servlet-name>
    <url-pattern>/getProperties</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>getPicture</servlet-name>
    <servlet-class>com.feng.servlet.getPicture</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getPicture</servlet-name>
    <url-pattern>/getPic</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>code</servlet-name>
    <servlet-class>com.feng.servlet.DynamicPic</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>code</servlet-name>
    <url-pattern>/dypic</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>redict</servlet-name>
    <servlet-class>com.feng.servlet.RedictServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>redict</servlet-name>
    <url-pattern>/redict</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>test</servlet-name>
    <servlet-class>com.feng.servlet.test</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>test</servlet-name>
    <url-pattern>/test</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>getCookie</servlet-name>
    <servlet-class>com.feng.servlet.CookieGet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getCookie</servlet-name>
    <url-pattern>/getCookie</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>getSession</servlet-name>
    <servlet-class>com.feng.servlet.getSession</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getSession</servlet-name>
    <url-pattern>/getSession</url-pattern>
  </servlet-mapping>
  <session-config>
<!--    这里是设置session存在的时间限制，以分钟为单位-->
    <session-timeout>15</session-timeout>
  </session-config>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.feng.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.feng.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>filterError</filter-name>
    <filter-class>com.feng.Filter.FilterShow</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>filterError</filter-name>
    <url-pattern>/sys/*</url-pattern>
<!--    <url-pattern>Filter管理的目录，也就是会发生Filter事件的管理夹</url-pattern>-->
  </filter-mapping>
  <listener>
    <listener-class>com.feng.Listener.ListenerShow</listener-class>
  </listener>
<!--  <context-param>-->
<!--    <param-name>username</param-name>-->
<!--    <param-value>HelloWorld</param-value>-->
<!--  </context-param>-->
</web-app>